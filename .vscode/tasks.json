{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  // Note that `jc` is a symlink in path (e.g. `/usr/local/bin/` ) to `/opt/j/j901/bin/jconsole`
  "version": "2.0.0",
  "windows": {
    "options": {
        "shell": {
            "executable": "powershell.exe",
        }
    }
  },
  "tasks": [
    {
      "label": "Build Project",
      "type": "shell",
      "linux": {
        "command": "${config:j.executablePath}",
        "args": ["${workspaceFolder}/source/build.ijs", "-js", "exit 0"]
      },
      "windows": {
        "command": "${config:j.executablePath}",
        "args": ["${workspaceFolder}\\source\\build.ijs", "-js", "exit 0"]
      },
      "group": "build"
    },
    {
      "label": "Test Project",
      "type": "shell",
      "linux": {
        "command": "${config:j.executablePath}",
        "args": ["${workspaceFolder}/source/run.ijs", "-js", "exit 0"]
      },
      "windows": {
        "command": "${config:j.executablePath}",
        "args": ["${workspaceFolder}\\source\\run.ijs", "-js", "exit 0"]
      },
      "group": "test"
    }
  ]
}